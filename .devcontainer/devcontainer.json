{
  // Name the config
  "name": "Codespace Learning",
  // Use the base codespacer image
  "image": "mcr.microsoft.com/vscode/devcontainers/universal:latest",

  "remoteUser": "codespace",
  "overrideCommand": false,

  // Add the IDs of extensions you want installed when the cont ins created 
  "customizations": {
    "vscode": {
        "extensions": [
            "Github.copilot"
        ]
    },
    "codespaces": {
        "openFiles": [
            "codespace.md"
            ]
        } 
    }
}
